<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_device_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/gain_spinner"
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginStart="49dp"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="-5dp"
        android:layout_toEndOf="@+id/textView" />

    <Spinner
        android:id="@+id/sps_spinner"
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/textView2" />

    <Spinner
        android:id="@+id/read_spinner"
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/gain_spinner"
        android:layout_marginTop="275dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="67dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="31dp"
        android:gravity="center"
        android:text="GAIN"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="67dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:text="SPS"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="67dp"
        android:layout_height="33dp"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/read_spinner"
        android:gravity="center"
        android:text="Channel"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="143dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="142dp"
        android:onClick="onClickChangeSettings"
        android:text="Change settings" />

    <Button
        android:id="@+id/button2"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="208dp"
        android:onClick="onClickReadValue"
        android:text="Read value" />

    <TextView
        android:id="@+id/adcValueView"
        android:layout_width="102dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="117dp"
        android:gravity="center"
        android:text="-"
        android:textAlignment="center" />


</RelativeLayout>