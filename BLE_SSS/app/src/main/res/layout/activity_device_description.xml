<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_device_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/writeCharacteristicsButton"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginStart="-137dp"
        android:layout_marginTop="45dp"
        android:elevation="0dp"
        android:onClick="onClickWriteCharacteristic"
        android:text="Write Characteristic" />

    <Button
        android:id="@+id/writeCharacteristicsButton2"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/writeCharacteristicsButton"
        android:layout_alignBottom="@+id/writeCharacteristicsButton"
        android:layout_marginStart="54dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/writeCharacteristicsButton"
        android:elevation="0dp"
        android:onClick="onClickWriteCustomCharacteristic"
        android:text="Write Custom Characteristic" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignTop="@+id/editText3"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignBottom="@+id/editText3"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:singleLine="false"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignTop="@+id/editText3"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignBottom="@+id/editText3"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:maxLength="4"
        android:singleLine="false"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:layout_marginStart="5dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="3dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:maxLength="4"
        android:singleLine="false"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="Characteristic" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="161dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="161dp"
        android:gravity="center"
        android:text="Service" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Value" />

    <Spinner
        android:id="@+id/gain_spinner"
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginStart="49dp"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="-5dp"
        android:layout_toEndOf="@+id/textView" />

    <Spinner
        android:id="@+id/sps_spinner"
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="67dp"
        android:layout_height="33dp"
        android:layout_below="@+id/writeCharacteristicsButton"
        android:layout_alignStart="@+id/writeCharacteristicsButton"
        android:layout_marginStart="-7dp"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text="GAIN"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="67dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:text="SPS"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="143dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="142dp"
        android:onClick="onClickChangeSettings"
        android:text="Change settings" />

    <Button
        android:id="@+id/button2"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="140dp"
        android:onClick="onClickReadValue"
        android:text="Read value" />


</RelativeLayout>